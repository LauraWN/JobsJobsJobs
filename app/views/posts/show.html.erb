<h2><%= @post.title %></h2>
<a href="/posts/<%= @post.id %>/edit">(edit)</a>
<h4><%= @post.content %></h4>



<h3>Comments</h3>
 <%= link_to "Add Your Comment", new_post_comment_path(@post) %>
<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= link_to "#{comment.title} (#{comment.content})", post_comment_path(@post, comment) %>
    </li>

  <% end %>
</ul>
