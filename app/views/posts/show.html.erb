<h2><%= @post.title %> <a href="/posts/<%= @post.id %>/edit">(edit)</a></h2>
<h4><%= @post.content %></h4>



<h3>Comments <%= link_to "(+)", new_post_comment_path(@post) %></h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= link_to "#{comment.title} (#{comment.album})", post_comment_path(@post, comment) %>
    </li>

  <% end %>
</ul>
